<resources>

    <style name="Widget.Theme.LesPas.ButtonBar.Fullscreen" parent="Widget.AppCompat.ButtonBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="DialogAnimation.Window" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_entering</item>
        <item name="android:windowExitAnimation">@anim/dialog_exiting</item>
    </style>
</resources>