<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".photo.PhotoDisplayFragment">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/media"
        android:transitionName="full_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_footprint" />

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/fullscreen_controls_bottom_margin"
        android:orientation="horizontal"
        android:background="@drawable/fullscreen_controls_background">

        <ImageButton
            android:id="@+id/set_cover_button"
            android:src="@drawable/ic_baseline_set_cover_24"
            android:tooltipText="@string/tooltip_text_set_cover"
            android:contentDescription="@string/tooltip_text_set_cover"
            style="@style/Widget.Theme.LesPas.ButtonBar.Fullscreen"/>

        <ImageButton
            android:id="@+id/share_button"
            android:src="@drawable/ic_baseline_share_24"
            android:tooltipText="@string/tooltip_text_share"
            android:contentDescription="@string/tooltip_text_share"
            style="@style/Widget.Theme.LesPas.ButtonBar.Fullscreen"/>

        <ImageButton
            android:id="@+id/info_button"
            android:src="@drawable/ic_baseline_info_24"
            android:tooltipText="@string/tooltip_text_info"
            android:contentDescription="@string/tooltip_text_info"
            style="@style/Widget.Theme.LesPas.ButtonBar.Fullscreen"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
